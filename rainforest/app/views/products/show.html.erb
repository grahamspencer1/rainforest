<h1><%= @product.name %></h1>

<p><%= link_to "Edit", edit_product_path %> | <%= link_to "Delete", product_path(@product), method: :delete, data: {confirm: "Are you sure you want to delete this product?"} %></p>

<p>Description: <%= @product.description %></p>
<p>Price: <%= @product.price_in_dollars %></p>

<p><%= link_to "Back to Products", products_url %></p>

<h4>New Review</h4>

<%= render "reviews/review" %>

<h4>Other Reviews</h4>

<% @product.reviews.each do |r| %>
  <ul>
    <li> <%= r.comment %> | <%= link_to "Edit", edit_product_review_path(@product.id, r.id) %> </li>
  </ul>
<% end %>
